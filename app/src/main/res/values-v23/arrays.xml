        <item>@string/ble_mode_balanced</item>
        <item>@string/ble_mode_low_latency</item>
        <item>@string/ble_mode_low_power</item>
        <item>@string/ble_mode_opportunistic</item>
    </string-array>

    <!--  匹配模式  -->
    <string-array name="ble_match_mode" tools:ignore="InconsistentArrays">
        <item>@string/ble_match_mode_sticky</item>
        <item>@string/ble_match_mode_aggressive</item>
