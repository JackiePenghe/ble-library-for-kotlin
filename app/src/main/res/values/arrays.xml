<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  扫描模式  -->
    <string-array name="ble_mode" tools:ignore="InconsistentArrays">
        <item>@string/ble_mode_balanced</item>
        <item>@string/ble_mode_low_latency</item>
        <item>@string/ble_mode_low_power</item>
    </string-array>

    <!--  回调类型  -->
    <string-array name="ble_callback_type" tools:ignore="InconsistentArrays">
        <item>@string/callback_type_all_matches</item>
    </string-array>

    <!--  名称过滤选项  -->
    <string-array name="name_filter_items">
        <item>@string/starts_name</item>
        <item>@string/full_name</item>
    </string-array>

    <!--  MAC地址过滤选项  -->
    <string-array name="mac_filter_items">
        <item>@string/starts_address</item>
        <item>@string/full_address</item>
    </string-array>

    <!--  特征的操作选项  -->
    <string-array name="characteristic_options">
        <item>@string/read_data</item>
        <item>@string/write_data</item>
        <item>@string/enable_notify</item>
    </string-array>

    <!--  写入数据时,数据的类型  -->
    <string-array name="write_data_types">
        <item>@string/string</item>
        <item>@string/hex</item>
    </string-array>

    <!--  扫描到的设备的设备操作选项  -->
    <string-array name="scanned_device_options">
        <item>@string/connect_device</item>
        <item>@string/view_scan_record</item>
    </string-array>

    <!--  布尔值选项  -->
    <string-array name="booleans">
        <item>@string/yes</item>
        <item>@string/no</item>
    </string-array>

    <!--  广播包-AD结构的操作选项  -->
    <string-array name="ad_struct_options">
        <item>@string/copy_all_ad_struct_data</item>
        <item>@string/copy_ad_data_only</item>
    </string-array>

    <!--  广播包-服务UUID的操作选项  -->
    <string-array name="service_data_options">
        <item>@string/copy_service_uuid</item>
        <item>@string/copy_service_data</item>
    </string-array>

    <!--  描述的操作选项  -->
    <string-array name="descriptor_options">
        <item>@string/read_data</item>
        <item>@string/write_data</item>
    </string-array>

    <!--  设备连接后-更多选项  -->
    <string-array name="connect_additional_options">
        <item>@string/begin_reliable_write</item>
        <item>@string/abort_reliable_write</item>
        <item>@string/read_rssi</item>
        <item>@string/change_mtu</item>
        <item>@string/read_phy</item>
        <item>@string/change_phy</item>
    </string-array>

    <!--  物理层选项  -->
    <string-array name="phy_options">
        <item>@string/ble_phy_option_no_preferred</item>
        <item>@string/ble_phy_option_s2</item>
        <item>@string/ble_phy_option_s8</item>
    </string-array>
</resources>